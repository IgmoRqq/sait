@model IEnumerable<sait.Models.CartCombo>

@{
    ViewData["Title"] = "Cart";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Корзина</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('~/images/pizzeria-back.jpg'); /* Замените на путь к вашему изображению */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            color: white;
            text-shadow: 2px 2px 4px #000;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Корзина</h2>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Combo.name</td>
                        <td>@item.Combo.desription</td>
                        <td>@item.Combo.price</td>
                        <td>@item.Quantity</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="id" value="@item.Combo.id" />
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-action="PlaceOrder" method="post">
            <button type="submit" class="btn btn-primary">Заказать</button>
        </form>
    </div>
</body>
</html>
