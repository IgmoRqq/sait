@model IEnumerable<sait.Models.Orders>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">
    <h2 class="text-center">My Orders</h2>
    <table class="table table-striped table-dark">
        <thead>
            <tr>

                <th>Date</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                @if (order.idUser == CurrentUser.user.id)
                {
                    <tr>

                    <td>@order.dateOrder.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@order.status</td>

                    <td>
                        <a asp-action="OrderDetails" asp-route-id="@order.id" class="btn btn-info">View Details</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
