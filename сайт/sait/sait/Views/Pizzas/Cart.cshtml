@model IEnumerable<sait.ViewModels.CartItem>

@{
    ViewData["Title"] = "Cart";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Корзина</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/images/pizza.jpg'); /* Относительный путь */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            color: white;
            text-shadow: 2px 2px 4px #000;
        }

        .container {
            background-color: #EAE7DC;
            padding: 20px;
            border-radius: 15px;
            max-width: 1200px;
        }

        .table {
            background-color: #D8C3A5;
            border-radius: 15px;
        }

            .table thead th {
                background-color: #3330;
                color: white;
            }

            .table tbody tr {
                background-color: rgba(255, 255, 255, 0.8);
                color: black;
            }

                .table tbody tr:nth-child(even) {
                    background-color: rgba(255, 255, 255, 0.6);
                }

        .btn-primary {
            background-color: #E98074;
            border: none;
        }

            .btn-primary:hover {
                background-color: #e5533d;
            }

        .btn-danger {
            background-color: #E98074;
            border: none;
        }

            .btn-danger:hover {
                background-color: #e5533d;
            }

        .btn-secondary {
            background-color: #8ea133;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #6c8c0f;
            }

        .text-center {
            text-align: center;
        }

        .mt-3 {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Корзина</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Размер</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                <!-- Содержимое корзины -->
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">Ваша корзина пуста</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Pizza.name</td>
                            <td>@item.Pizza.size</td>
                            <td>@item.Pizza.price</td>
                            <td>@item.Quantity</td>
                            <td>
                                <!-- Форма для отправки запроса на удаление товара из корзины -->
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="id" value="@item.Pizza.id" />
                                    <button type="submit" class="btn btn-danger">Удалить</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <!-- Кнопка для оформления заказа -->
        @if (Model.Any())
        {
            <form asp-action="PlaceOrder" method="post">
                <button type="submit" class="btn btn-primary">Заказать</button>
            </form>
        }
        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Pizzas")" class="btn btn-secondary">Вернуться в список</a>
        </div>
    </div>
</body>
</html>
