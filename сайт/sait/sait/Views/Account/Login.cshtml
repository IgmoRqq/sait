@using sait.ViewModels
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            color: rgb(255 164 172) !important;
        }

        .col-md-6{
            background-color: rgb(52 97 89 / 70%);
        }
        a{
            color: rgb(255 164 172) !important;
        }
        .text-danger{
            color: rgb(255 164 172) !important;
        }
        .text-primary {
            color: rgb(0 0 0) !important;
            
        }
    </style>
</head>
<body>
    <div class="container form-container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-6 card p-4 shadow-lg border-0">
                <div class="text-center mb-4">
                    <img src="~/images/logo.png" alt="Pizzeria Logo" class="img-fluid" style="max-width: 150px;">
                </div>
                <h2 class="text-center text-primary mb-3">Добро пожаловать в Пиццерию</h2>
                <h3 class="text-center text-danger">Войти</h3>
                <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Register", new { returnUrl = ViewData["ReturnUrl"] })" class="text-decoration-none">Нет аккаунта?</a>
                        <input type="submit" value="Войти" class="btn btn-primary text-white" style="font-size: 1.1rem; margin-top: 10px;" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
