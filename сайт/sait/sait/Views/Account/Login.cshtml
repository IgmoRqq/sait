@using sait.ViewModels
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6 card p-4 shadow-lg border-0">
            <div class="text-center mb-4">
                <img src="~/images/pizzeria-logo.png" alt="Pizzeria Logo" class="img-fluid" style="max-width: 150px;">
            </div>
            <h2 class="text-center text-primary mb-3">Добро пожаловать в Пиццерию</h2>
            <h3 class="text-center text-info">Войти</h3>
            <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <a href="@Url.Action("Register", new { returnUrl = ViewData["ReturnUrl"] })" class="text-decoration-none">Нет аккаунта?</a>
                    <input type="submit" value="Войти" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}